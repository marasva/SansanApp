<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="#fcfcfc">

    <Button
        android:id="@+id/comida"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_below="@+id/aula"
        android:layout_alignStart="@+id/aula"
        android:layout_alignLeft="@+id/aula"
        android:layout_marginTop="20dp"
        android:background="#040041"
        android:clickable="true"
        android:drawableTop="@drawable/silverware-fork-knife"
        android:text="Comida"
        android:textColor="#FCFCFD" />

    <Button
        android:id="@+id/mail"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="15dp"
        android:background="#040041"
        android:clickable="true"
        android:drawableTop="@drawable/email"
        android:focusable="true"
        android:text="Correo"
        android:textSize="20dp"
        android:textColor="#FCFCFD"
        />

    <Button
        android:id="@+id/resbib"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_below="@+id/comida"
        android:layout_alignStart="@+id/comida"
        android:layout_alignLeft="@+id/comida"
        android:layout_marginTop="20dp"
        android:background="#040041"
        android:clickable="true"
        android:drawableTop="@drawable/book-open-variant"
        android:focusable="true"
        android:text="Reservas     biblioteca"
        android:textColor="#FCFCFD" />

    <Button
        android:id="@+id/mapa"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_below="@+id/mail"
        android:layout_alignStart="@+id/mail"
        android:layout_alignLeft="@+id/mail"
        android:layout_marginTop="20dp"
        android:background="#040041"
        android:clickable="true"
        android:drawableTop="@drawable/map"
        android:focusable="true"
        android:text="Mapa"
        android:textColor="#FCFCFD" />

    <Button
        android:id="@+id/aula"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        android:background="#040041"
        android:clickable="true"
        android:drawableTop="@drawable/icons8-centro-de-estudiantes-24"
        android:focusable="true"
        android:text="Aula"
        android:textColor="#FCFCFD" />

    <Button
        android:id="@+id/resdep"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_below="@+id/mapa"
        android:layout_alignStart="@+id/mapa"
        android:layout_alignLeft="@+id/mapa"
        android:layout_marginTop="20dp"
        android:background="#040041"
        android:clickable="true"
        android:drawableTop="@drawable/basketball"
        android:focusable="true"
        android:text="Reservas   deportivas"
        android:textColor="#FCFCFD" />

</RelativeLayout>